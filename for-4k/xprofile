export _JAVA_AWT_WM_NONREPARENTING=1
xset s off
xset s noexpose
xset s noblank
xset dpms 0 0 0
if xrandr --query | grep '^DP-1 connected'; then
    export QT_AUTO_SCREEN_SCALE_FACTOR=1
    xrdb -merge ~/.config/Xresources
    xrandr --output DP-1 --mode 3840x2160 --primary --output DP-2 --left-of DP-1 --mode 3840x2160 --output eDP-1 --off
fi
